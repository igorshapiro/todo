<div class="row-fluid" ng-controller="TodoItemsController" >
  <div class="todo" ng-repeat="todo in todos">
    {{todo.title}}
  </div>
  <div class="new_todo">
    <form>
      <input type="text" ng-model="newTodoTitle">
      <button type="submit" class="btn btn-primary" ng-click="addTodo()">Add</button>
    </form>
  </div>
</div>